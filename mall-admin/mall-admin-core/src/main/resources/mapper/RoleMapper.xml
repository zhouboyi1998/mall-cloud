<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cafe.admin.dao.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cafe.admin.model.Role">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="description" property="description"/>
        <result column="role_status" property="roleStatus"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="deleted"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, role_name, description, role_status, create_time, update_time, is_deleted
    </sql>

    <select id="listRoleName" resultType="java.lang.String">
        SELECT role_name FROM mall_role
    </select>

    <select id="listRoleNameByAdminId" resultType="java.lang.String">
        SELECT role_name
        FROM mall_role AS r
        LEFT JOIN mall_admin_role AS ar ON ar.role_id = r.id
        WHERE ar.admin_id = ${adminId}
    </select>
</mapper>
